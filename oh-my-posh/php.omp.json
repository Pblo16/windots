{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "text": "#FDF0ED",
    "subtle": "#8B949E",
    "accent": "#58A6FF",
    "muted": "#6E7681",
    "success": "#3FB950",
    "warn": "#FFD43B",
    "error": "#F85149",
    "cyan": "#26BBD9",
    "green": "#29D398",
    "background": "#242a30"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "node",
          "style": "plain",
          "background": "p:background",
          "padding": 1,
          "foreground": "p:green",
          "properties": {
            "display_version": true
          },
          "template": "  {{ .Full }} "
        },
        {
          "type": "node",
          "background": "transparent",
          "foreground": "p:background",
          "style": "plain",
          "template": "\ue0b0 "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:cyan",
          "background": "p:background",

          "properties": {
            "folder_icon": "  ",
            "home_icon": "  - - -",
            "style": "agnoster_short"
          },
          "template": "{{ .Path }} "
        },
        {
          "background": "transparent",
          "foreground": "p:background",
          "style": "plain",
          "template": "\ue0b0 ",
          "type": "text"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:green",
          "properties": {
            "branch_icon": " "
          },
          "template": "{{ .HEAD }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:muted",
          "properties": {
            "always_enabled": true
          },
          "template": "› "
        }
      ]
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground": "p:accent",
    "template": "› "
  },
  "console_title_template": "{{ .Folder }}",
  "version": 3
}